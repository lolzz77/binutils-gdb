    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "GNU debug",
            "program": "/usr/local/bin/gdb",
            "cwd" : "/workspace/objdir",
            "stopAtEntry": true,
            "args": [
                "${input:pickProgram}"
            ]
        },
    ],
    "inputs": [
        {
            "id": "pickProgram",
            "description": "Hmm",
            "type": "pickString",
            "options": [
                "/usr/local/bin/gdb",
                "/workspace/test/myprogram"
            ],
            "default": "/usr/local/bin/gdb"
        }
    ]
}